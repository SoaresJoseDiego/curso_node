<h1>Todas as Tasks</h1>

<ul class="task-list">
    {{#each tasks}}
    <li>

        {{#if this.done}}
            <a href="/" class="title done">{{this.title}}</a>

            {{else}}
            <a href="/" class="title">{{this.title}}</a>
        {{/if}}
        <a href="/" class="title">{{this.title}}</a>
        <div class="actions">
            <form action="/tasks/updatestatus" method="POST">
            <div class="actions">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="done" value="{{this.done}}">

                <button type="submit">
                    <i class="bi bi-check2"></i>
                </button>
            </div>
            </form>
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </div>
    </li>
    {{/each}}
</ul>